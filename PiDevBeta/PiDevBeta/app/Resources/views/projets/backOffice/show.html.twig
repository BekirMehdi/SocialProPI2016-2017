{% extends "::layout/layoutAdmin.html.twig" %}

{% block body %}
    <div class="page-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('adminProjets_index') }}">Acueil</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Projet</a></li>
            <li class="breadcrumb-item active">details</li>
        </ol>
        <div class="page-header-actions">
            <a class="btn btn-sm btn-primary btn-round waves-effect" href="{{ path('adminTeams_index') }}">
                <i class="icon md-link" aria-hidden="true"></i>
                <span class="hidden-sm-down">Retour a la liste</span>
            </a>
        </div>
    </div>
    <div class="col-md-12 col-xxl-12">
        <div class="pricing-list text-left">
            <div class="pricing-header bg-blue-600">
                <div class="pricing-title">Projet</div>
            </div>
            <ul class="pricing-features">
                <li>
                    <strong>id projet</strong> {{ projet.idPo }}
                </li>
                <li>
                    <strong>nom</strong>{{ projet.name }}
                </li>
                <li>
                    <strong>Date creation</strong>      <span>{% if projet.datecreation %}{{ projet.datecreation|date('Y-m-d H:i:s') }}{% endif %}</span>
                    <i class="icon md-time ml-10" aria-hidden="true"></i>
                </li>

                <li>
                    <strong>Date depart</strong>      <span>{% if projet.datestart %}{{ projet.datestart|date('Y-m-d H:i:s') }}{% endif %}</span>
                    <i class="icon md-time ml-10" aria-hidden="true"></i>
                </li>
                <li>
                    <strong>Date limite</strong>      <span>{% if projet.datelimite %}{{ projet.datelimite|date('Y-m-d H:i:s') }}{% endif %}</span>
                    <i class="icon md-time ml-10" aria-hidden="true"></i>
                </li>
                <li>
                    <strong>Description</strong> {{ projet.description }}</li>
                <li>
                    <strong>Progression</strong>
                    <div class="progress progress-xs mb-0">
                        <div class="progress-bar progress-bar-primary" style="width: {{ projet.getProgression() }}%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="90" role="progressbar">
                        </div>
                    </div>
                    <span class="float-right progress-percent">{{ projet.getProgression() }}%</span>
                </li>
            </ul>
            <div class="form-group form-material row">
                <div class="col-md-9 offset-md-3">
                    <a class="btn btn-primary btn-outline float-right waves-effect" href="{{ path('adminProjets_edit', { 'id': projet.idPo }) }}" data-wizard="next" role="button">modifi√©r</a>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn-default btn waves-effect">Supprimer</button>
                    {{ form_end(delete_form) }}

                </div>
            </div>

        </div>
    </div>

{% endblock %}

